{
  "name": "realworld-app",
  "version": "1.0.0",
  "description": "RealWorld App - Medium.com clone with Go + React",
  "private": true,
  "scripts": {
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "npm run lint:fix --prefix frontend",
      "npm run format --prefix frontend"
    ],
    "backend/**/*.go": [
      "cd backend && golangci-lint run --fix"
    ]
  }
}
